<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_plane"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_baseline_airplanemode_active_24" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="217dp"
        android:layout_height="75dp"
        android:layout_below="@+id/iv_plane"
        android:layout_alignStart="@+id/iv_plane"
        android:layout_alignEnd="@+id/iv_plane"
        android:layout_marginStart="-11dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="-4dp"
        android:gravity="center"
        android:text="Travel Helper"
        android:textColor="#1f81d8"
        android:textSize="30dp"
        android:textStyle="bold" />

</RelativeLayout>